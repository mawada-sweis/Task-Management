@model TaskManagementSystem.Models.TaskCreateViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Create New Task</h2>

<hr />

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Title" class="control-label">Title</label>
            <input asp-for="Title" name="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label">Description</label>
            <input asp-for="Description" name="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DueDate" class="control-label">Due Date</label>
            <input asp-for="DueDate" name="DueDate" type="date" class="form-control" />
            <span asp-validation-for="DueDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Status" class="control-label">Status</label>
            <select asp-for="Status" name="Status" class="form-control">
                <option value="Draft">Draft</option>
                <option value="In progress">In Progress</option>
                <option value="Done">Done</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <hr />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Create Task</button>
        <a href="/TaskModels" class="btn btn-default">Back to List</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
